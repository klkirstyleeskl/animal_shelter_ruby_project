  <form class="form-style-1" method="post" action="/owners/<%= @owner.id %>">

  <label for="field1"
  <span>First Name => </span><input type="text" id="first_name" name="first_name" required="true"
  value="<%= @owner.first_name %>"/>
  </label>


  <label for="field2"
  <span>Last Name => </span><input type="text" id="last_name" name="last_name" required="true"
  value="<%= @owner.last_name %>"/>
  </label>

  <label for="field3"
  <span>Telephone => </span><input type="text" id="telephone_number" name="telephone_number" required="true"
  value="<%= @owner.telephone_number %>"/>
  </label>

  <input type='submit' value="Edit owner">
  </form>
